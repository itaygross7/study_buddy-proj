# Flask Configuration
FLASK_ENV="development" # "development" or "production"
SECRET_KEY="change-this-to-a-very-secret-key-in-production"

# Domain Configuration
DOMAIN="studybuddyai.my"
BASE_URL="https://studybuddyai.my"  # Full URL for email links and OAuth callbacks

# Infrastructure URIs
# For Docker Compose, use the service names as hostnames
MONGO_URI="mongodb://mongo:27017/studybuddy"
RABBITMQ_URI="amqp://user:password@rabbitmq:5672/"

# AI Service API Keys (replace with your actual keys)
OPENAI_API_KEY="your_openai_api_key_here"
GEMINI_API_KEY="your_google_gemini_api_key_here"

# AI Model Configuration (SB_* prefix for StudyBuddy)
# These are optional - sensible defaults are provided
SB_OPENAI_MODEL="gpt-4o-mini"        # OpenAI model to use
SB_GEMINI_MODEL="gemini-1.5-flash"   # Gemini model to use
SB_DEFAULT_PROVIDER="gemini"          # Default AI provider: "gemini" or "openai"
SB_BASE_URL=""                        # Optional custom base URL for API

# Logging Level
# Use "DEBUG" for development to see all logs
LOG_LEVEL="DEBUG"

# Admin Configuration
# Set this to your email to get admin access
ADMIN_EMAIL="your_admin_email@example.com"

# Email Configuration (SMTP) - For email verification and notifications
# Example using Gmail (enable "App Passwords" in your Google account)
MAIL_SERVER="smtp.gmail.com"
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME="your_email@gmail.com"
MAIL_PASSWORD="your_app_password_here"
MAIL_DEFAULT_SENDER="StudyBuddy <your_email@gmail.com>"

# Security Settings (for production with HTTPS)
SESSION_COOKIE_SECURE=false    # Set to true when using HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE="Lax"
